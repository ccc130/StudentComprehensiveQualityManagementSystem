<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.evaluation.mapper.EvaluationStudentsMapper">
    
    <resultMap type="EvaluationStudents" id="EvaluationStudentsResult">
        <result property="id"    column="id"    />
        <result property="content"    column="content"    />
        <result property="scores"    column="scores"    />
        <result property="name"    column="name"    />
        <result property="isevaluation"    column="isevaluation"    />
        <result property="nameId"    column="name_id"    />
        <result property="teachingClass"    column="teaching_class"    />
        <result property="timeEvaluation"    column="time_evaluation"    />
    </resultMap>

    <sql id="selectEvaluationStudentsVo">
        select id, content, scores, name, isevaluation, name_id, teaching_class, time_evaluation from evaluation_students
    </sql>

    <select id="selectEvaluationStudentsList" parameterType="EvaluationStudents" resultMap="EvaluationStudentsResult">
        <include refid="selectEvaluationStudentsVo"/>
        <where>  
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="params.beginScores != null and params.beginScores != '' and params.endScores != null and params.endScores != ''"> and scores between #{params.beginScores} and #{params.endScores}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="isevaluation != null "> and isevaluation = #{isevaluation}</if>
            <if test="nameId != null  and nameId != ''"> and name_id = #{nameId}</if>
            <if test="teachingClass != null  and teachingClass != ''"> and teaching_class like concat('%', #{teachingClass}, '%')</if>
            <if test="params.beginTimeEvaluation != null and params.beginTimeEvaluation != '' and params.endTimeEvaluation != null and params.endTimeEvaluation != ''"> and time_evaluation between #{params.beginTimeEvaluation} and #{params.endTimeEvaluation}</if>
        </where>
    </select>
    
    <select id="selectEvaluationStudentsById" parameterType="Long" resultMap="EvaluationStudentsResult">
        <include refid="selectEvaluationStudentsVo"/>
        where id = #{id}
    </select>

    <insert id="insertEvaluationStudents" parameterType="EvaluationStudents">
        insert into evaluation_students
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="scores != null">scores,</if>
            <if test="name != null">name,</if>
            <if test="isevaluation != null">isevaluation,</if>
            <if test="nameId != null">name_id,</if>
            <if test="teachingClass != null">teaching_class,</if>
            <if test="timeEvaluation != null">time_evaluation,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="scores != null">#{scores},</if>
            <if test="name != null">#{name},</if>
            <if test="isevaluation != null">#{isevaluation},</if>
            <if test="nameId != null">#{nameId},</if>
            <if test="teachingClass != null">#{teachingClass},</if>
            <if test="timeEvaluation != null">#{timeEvaluation},</if>
         </trim>
    </insert>

    <update id="updateEvaluationStudents" parameterType="EvaluationStudents">
        update evaluation_students
        <trim prefix="SET" suffixOverrides=",">
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="scores != null">scores = #{scores},</if>
            <if test="name != null">name = #{name},</if>
            <if test="isevaluation != null">isevaluation = #{isevaluation},</if>
            <if test="nameId != null">name_id = #{nameId},</if>
            <if test="teachingClass != null">teaching_class = #{teachingClass},</if>
            <if test="timeEvaluation != null">time_evaluation = #{timeEvaluation},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteEvaluationStudentsById" parameterType="Long">
        delete from evaluation_students where id = #{id}
    </delete>

    <delete id="deleteEvaluationStudentsByIds" parameterType="String">
        delete from evaluation_students where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>